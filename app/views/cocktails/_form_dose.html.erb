<%= simple_form_for [@cocktail, @dose] do |f| %>
  <% if @dose.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% f.hidden_field :cocktail_id, :value => @cocktail_id %>
  <% f.hidden_field :ingredient_id, :value => @ingredient_id %>
  <%= f.label :Quantity %>
  <%= f.text_field :description, placeholder: "1 shot, 1 slice, etc"%>
  <%= f.association :ingredient, prompt: "Choose and ingredient" %>
  <%= f.button :submit, class: "btn btn-danger" %>
<% end %>
